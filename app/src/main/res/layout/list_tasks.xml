<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list_tasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.xiaobin.soapandroid.tasks.TasksActivity">

    <TextView
            android:layout_width="wrap_content"
            android:text="@string/labelTitle"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/listTasksLabelTitle"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/listTasksLabelTitle"
            android:layout_alignTop="@+id/listTasksLabelTitle"
            android:id="@+id/listTasksTitle"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/listTasksTitle"
            android:id="@+id/listTasksLabelDescription"
            android:text="@string/labelDescription"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/listTasksLabelDescription"
            android:layout_alignTop="@+id/listTasksLabelDescription"
            android:id="@+id/listTasksDescription"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"/>
</RelativeLayout>
